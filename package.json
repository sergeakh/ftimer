{
  "name": "ftimer",
  "type": "module",
  "scripts": {
    "start": "webpack serve --mode=development",
    "build": "npm run prettier && npm run lint && webpack --mode=production",
    "lint": "npx eslint . --ext .js,.ts,.tsx && stylelint src/**/*.css",
    "prettier": "npx prettier --write ./src",
    "http-server": "http-server dist -c-1 -b"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version"
  ],
  "dependencies": {
    "classnames": "2.3.1",
    "nosleep.js": "0.12.0",
    "preact": "10.6.2"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-transform-react-jsx": "7.16.0",
    "@babel/preset-env": "7.16.4",
    "@babel/preset-typescript": "7.16.0",
    "@types/classnames": "2.3.1",
    "@types/dom-screen-wake-lock": "1.0.0",
    "@typescript-eslint/eslint-plugin": "5.6.0",
    "@typescript-eslint/parser": "5.6.0",
    "autoprefixer": "10.4.0",
    "babel-loader": "8.2.3",
    "clean-webpack-plugin": "4.0.0",
    "compression-webpack-plugin": "9.0.1",
    "core-js": "3.19.3",
    "css-loader": "6.5.1",
    "eslint": "8.4.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "fork-ts-checker-webpack-plugin": "6.5.0",
    "html-webpack-plugin": "5.5.0",
    "http-server": "14.0.0",
    "mini-css-extract-plugin": "2.4.5",
    "postcss": "8.4.4",
    "postcss-csso": "5.0.1",
    "postcss-dark-theme-class": "0.7.3",
    "postcss-import": "14.0.2",
    "postcss-loader": "6.2.1",
    "prettier": "2.5.1",
    "style-loader": "3.3.1",
    "stylelint": "14.1.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "24.0.0",
    "typescript": "4.5.2",
    "webpack": "5.65.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.6.0",
    "workbox-webpack-plugin": "6.4.2"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "autoprefixer": {},
      "postcss-csso": {},
      "postcss-dark-theme-class": {
        "darkSelector": "[data-color-scheme=\"dark\"]",
        "lightSelector": "[data-color-scheme=\"light\"]"
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  }
}
