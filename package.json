{
  "name": "ftimer",
  "type": "module",
  "scripts": {
    "start": "webpack serve --mode=development",
    "build": "npm run prettier && npm run lint && webpack --mode=production",
    "lint": "npx eslint . --ext .js,.ts,.tsx && stylelint src/**/*.css",
    "prettier": "npx prettier --write ./src",
    "http-server": "http-server dist -c-1 -b"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version"
  ],
  "dependencies": {
    "classnames": "2.3.1",
    "nosleep.js": "0.12.0",
    "preact": "10.7.1"
  },
  "devDependencies": {
    "@babel/core": "7.17.9",
    "@babel/plugin-transform-react-jsx": "7.17.3",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@types/dom-screen-wake-lock": "1.0.0",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "autoprefixer": "10.4.4",
    "babel-loader": "8.2.4",
    "clean-webpack-plugin": "4.0.0",
    "compression-webpack-plugin": "9.2.0",
    "core-js": "3.21.1",
    "css-loader": "6.7.1",
    "eslint": "8.12.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "fork-ts-checker-webpack-plugin": "7.2.3",
    "html-webpack-plugin": "5.5.0",
    "http-server": "14.1.0",
    "mini-css-extract-plugin": "2.6.0",
    "postcss": "8.4.12",
    "postcss-csso": "6.0.0",
    "postcss-dark-theme-class": "0.7.3",
    "postcss-import": "14.1.0",
    "postcss-loader": "6.2.1",
    "prettier": "2.6.2",
    "style-loader": "3.3.1",
    "stylelint": "14.6.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "typescript": "4.6.3",
    "webpack": "5.72.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.8.1",
    "workbox-webpack-plugin": "6.5.2"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "autoprefixer": {},
      "postcss-csso": {},
      "postcss-dark-theme-class": {
        "darkSelector": "[data-color-scheme=\"dark\"]",
        "lightSelector": "[data-color-scheme=\"light\"]"
      }
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  }
}
